<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/post_thumbnail"
			android:layout_width="50dip" android:layout_height="50dip"
			android:padding="10dip" android:background="@android:color/transparent"
			android:scaleType="fitCenter" android:layout_centerInParent="true" />
	</RelativeLayout>
	<TextView android:id="@+id/post_title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip"
		android:paddingRight="10dip" android:paddingTop="30dip"
		android:paddingBottom="30dip" android:gravity="center_vertical"
		android:textColor="@color/post_text_color" android:background="@android:color/transparent" />
</LinearLayout>
